{
  "name": "anunciosloc-backend-intermedio",
  "version": "1.0.0",
  "description": "Backend completo da versão intermédia do sistema AnunciosLoc - Sistema de anúncios baseado em localização",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "debug": "nodemon --inspect server.js",
    "init-db": "node scripts/init-db.js",
    "seed": "node scripts/seed-data.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "docker:build": "docker build -t anunciosloc-backend .",
    "docker:run": "docker run -p 3000:3000 anunciosloc-backend"
  },
  "keywords": [
    "anuncios",
    "localização",
    "mensagens",
    "mobile",
    "backend",
    "api",
    "mysql",
    "nodejs",
    "express"
  ],
  "author": {
    "name": "AnunciosLoc Team",
    "email": "dev@anunciosloc.pt"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/anunciosloc/backend-intermedio.git"
  },
  "bugs": {
    "url": "https://github.com/anunciosloc/backend-intermedio/issues"
  },
  "homepage": "https://github.com/anunciosloc/backend-intermedio#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jest": "^27.6.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "middleware/**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}